# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database Configuration
# Use your production database URL here
DATABASE_URL="postgresql://username:password@localhost:5432/oilflow_bidec"

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key

# Admin System Configuration
ADMIN_DEFAULT_EMAIL=admin@oilflowbidec.com
ADMIN_DEFAULT_PASSWORD=secure-password-here

# Rate Limiting (Upstash Redis - Optional)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# Analytics (Vercel - Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Production Environment
NODE_ENV=production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://oilflowbidec.com